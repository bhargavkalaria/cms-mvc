@model IEnumerable<CMS.BE.ViewModels.UserViewModel>
@{
    ViewBag.Title = "User Role List";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}
<div class="card">

    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>User Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Role</th>
                    <th>Edit Access</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UId</td>
                        <td>@item.FName</td>
                        <td>@item.LName</td>
                        <td>@item.Role</td>
                        <td><a class="btn" href="/Role/updateRole/@item.UId"><i class="fas fa-edit"></i></a></td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    <!-- /.card-body -->
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<script src="~/Content/plugins/datatables/jquery.dataTables.js"></script>
<script src="~/Content/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
<script src="~/Content/plugins/sweetalert2/sweetalert2.min.js"></script>
<script>
    $("#example1").DataTable();
</script>