<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link href="~/Content/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link href="~/Content/dist/css/adminlte.min.css" rel="stylesheet" />
    <!-- iCheck -->
    <link href="~/Content/plugins/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet" />
    <!-- Tempusdominus Bbootstrap 4 -->
    <link href="~/Content/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/Content/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!--Alertify-->
    <link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/alertify.css" rel="stylesheet" />
    <!-- summernote -->
    <link href="~/Content/plugins/summernote/summernote-bs4.css" rel="stylesheet" />
    <!-- Daterange picker -->
    <link href="~/Content/plugins/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <!-- JQVMap -->
    <link href="~/Content/plugins/jqvmap/jqvmap.min.css" rel="stylesheet" />
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Content/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
    <!-- Custom style -->
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/x-icon" href="https://raw.githubusercontent.com/dhyan1999/Project_documentFinalYear/master/circle-cropped.png" />
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>

            </ul>
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle p-0 d-flex align-items-center" href="#" id="navbardrop" data-toggle="dropdown">
                        @Session["UserName"]
                    </a>
                    <div class="dropdown-menu right-0">
                        <a href="#" class="dropdown-item" data-toggle="modal" data-target="#exampleModal">Reset Password</a>
                        <a href="/Login/Logout" class="dropdown-item">Logout</a>
                        @if (Session["addUserAccess"] != null)
                        {
                            <a href="/Login/AddUser" class="dropdown-item">Add new user</a>
                        }
                    </div>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <div href="#" class="brand-link text-center">
                @* <img src="../images/logo.jpg" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">*@
                <span class="brand-text font-weight-light" style="display:flex;justify-content:center;">CMS</span>
            </div>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Images/user-icon.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@Session["UserName"]</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/MainDashboard/Index" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Dashboard
                                </p>
                            </a>
                        </li>
                        @if (Session["addCampaignAccess"] != null || Session["deleteCampainAccess"] != null || Session["editCampaignAccess"] != null || Session["viewCampaignAccess"] != null || Session["viewQuickCampaignAccess"] != null || Session["addQuickCampaignAccess"] != null)
                        {
                            <li class="nav-item has-treeview">
                            <a href="#" class="nav-link ">
                                <i class="fa fa-th-list nav-icon" aria-hidden="true"></i>
                                <p>
                                    Campaign
                                    <i class="right fas fa-angle-right"></i>
                                </p>
                            </a>

                            <ul class="nav nav-treeview">
                                @if (Session["addCampaignAccess"] != null || Session["deleteCampainAccess"] != null || Session["editCampaignAccess"] != null || Session["viewCampaignAccess"] != null)
                                {
                                    <li class="nav-item">
                                        <a href="/Campaign/Index" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Campaign</p>
                                        </a>
                                    </li>
                                }
                                @if (Session["viewQuickCampaignAccess"] != null || Session["addQuickCampaignAccess"] != null)
                                {
                                    <li class="nav-item">
                                        <a href="/QuickCampaign/QuickCampaignsList" class="nav-link ">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Quick Campaign</p>
                                        </a>
                                    </li>
                                }
                                </ul>
                        </li>
                        }
                        @if (Session["hasReportAccess"] != null)
                        {
                        <li class="nav-item">
                            <a href="" class="nav-link">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p>
                                    Reports
                                </p>
                                <i class="right fas fa-angle-right"></i>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/Report/GenerateReport" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Data Reports</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Report/GenerateGraph" class="nav-link ">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Charts</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        }

                        @if (Session["uploadCustomerAccess"] != null)
                        {
                        <li class="nav-item">
                            <a href="/DataImport/Index" class="nav-link">
                                <i class="fa fa-upload nav-icon"></i>
                                <p>Upload Customer Data</p>
                            </a>
                        </li>
                        }

                        @if (Session["viewTemplateAccess"] != null || Session["addTemplateAccess"] != null || Session["deleteTemplateAccess"] != null || Session["editTemplateAccess"] != null)
                        {
                        <li class="nav-item">
                            <a href="/Template/Templates" class="nav-link">
                                <i class="fas fa-envelope-open-text nav-icon"></i>
                                <p>Email Template</p>
                            </a>
                        </li>
                        }
                        @if(Session["viewBrandAccess"]!=null || Session["addBrandAccess"]!=null || Session["deleteBrandAccess"]!=null || Session["editBrandAccess"]!=null)
                        {
                        <li class="nav-item">
                            <a href="/BrandMaster/BrandList" class="nav-link">
                                <i class="fas fa-cubes nav-icon"></i>
                                <p>Brands</p>
                            </a>
                        </li>
                        }

                        @if (Session["accesUser"] != null)
                        {
                        <li class="nav-item">
                            <a href="/Role/userList" class="nav-link">
                                <i class="fas fa-user-tag  nav-icon"></i>
                                <p> Access Role</p>
                            </a>
                        </li>
                        }
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <div class="content-wrapper" style="padding: 20px;">
            @RenderBody()
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Reset Password</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" class="form-control" id="cur_pwd" placeholder=" Current Password" name="cur_pwd">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" class="form-control" id="new_pwd" placeholder=" New Password" name="new_pwd">
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button style="width:50%;" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button style="width:50%;" id="reset" class="btn btn-primary">Confirm Password</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>

    <br />
    

    <!-- Dash Board Completed-->
    <!-- ./wrapper -->
    <!-- jQuery -->
    <!-- jQuery UI 1.11.4 -->
    <script src="~/Content/plugins/jquery/jquery.min.js"></script>

    <script src="~/Content/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <!-- Bootstrap 4 -->
    <script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- ChartJS -->
    <script src="~/Content/plugins/chart.js/Chart.min.js"></script>
    <script src="~/Content/dist/js/demo.js"></script>
 
    <!-- Sparkline -->
    <script src="~/Content/plugins/sparklines/sparkline.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/Content/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- JQVMap -->
    <script src="~/Content/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/Content/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/Content/plugins/jquery-knob/jquery.knob.min.js"></script>
    <!-- daterangepicker -->
    <script src="~/Content/plugins/moment/moment.min.js"></script>
    <script src="~/Content/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/Content/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Summernote -->
    <script src="~/Content/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/dist/js/adminlte.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <!-- AdminLTE for demo purposes -->
    <!-- DataTables -->

    <script src="~/Content/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/Content/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script src="~/Content/dist/js/demo.js"></script>
    <script src="~/Scripts/toastr.js"></script>
    <script src="~/Content/js/Dashboard.js"></script>
    <script src="~/Content/js/card.js"></script>

</body>

</html>